<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" id="title" value="{{link.title}}" placeholder="Title" autofocus class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" id="url" value="{{link.url}}" class="form-control" placeholder="URL" required>
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="description" rows="2" class="form-control" placeholder="Description" required>{{link.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">Save</button>
                            <a href="/links" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>